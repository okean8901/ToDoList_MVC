@model LoginViewModel

@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="row justify-content-center">
    <div class="col-md-5">
        <div class="card shadow-sm">
            <div class="card-body p-5">
                <!-- Tiêu đề -->
                <h2 class="card-title mb-4 text-center">
                    <i class="fas fa-sign-in-alt text-primary"></i> Đăng nhập
                </h2>

                <!-- Form đăng nhập -->
                <form asp-action="Login" method="post" novalidate class="needs-validation">
                    <!-- CSRF Token -->
                    @Html.AntiForgeryToken()

                    <!-- Email -->
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Địa chỉ Email</label>
                        <input asp-for="Email" type="email" class="form-control" placeholder="example@gmail.com" required />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <!-- Mật khẩu -->
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Mật khẩu</label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Nhập mật khẩu" required />
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                    <!-- Ghi nhớ -->
                    <div class="mb-3 form-check">
                        <input asp-for="RememberMe" type="checkbox" class="form-check-input" id="rememberMe" />
                        <label class="form-check-label" for="rememberMe">
                            Ghi nhớ tôi
                        </label>
                    </div>

                    <!-- Nút đăng nhập -->
                    <button type="submit" class="btn btn-primary w-100 py-2">
                        <i class="fas fa-check"></i> Đăng nhập
                    </button>
                </form>

                <!-- Link đăng ký -->
                <div class="text-center mt-3">
                    <p class="text-muted">
                        Chưa có tài khoản? 
                        <a asp-controller="Auth" asp-action="Register">Đăng ký ngay</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
