@model RegisterViewModel

@{
    ViewData["Title"] = "Đăng ký";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body p-5">
                <!-- Tiêu đề -->
                <h2 class="card-title mb-4 text-center">
                    <i class="fas fa-user-plus text-primary"></i> Đăng ký tài khoản
                </h2>

                <!-- Form đăng ký -->
                <form asp-action="Register" method="post" novalidate class="needs-validation">
                    <!-- CSRF Token -->
                    @Html.AntiForgeryToken()

                    <!-- Email -->
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Địa chỉ Email</label>
                        <input asp-for="Email" type="email" class="form-control" placeholder="example@gmail.com" required />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <!-- Tên đầy đủ -->
                    <div class="mb-3">
                        <label asp-for="FullName" class="form-label">Tên đầy đủ</label>
                        <input asp-for="FullName" type="text" class="form-control" placeholder="Nhập tên của bạn" required />
                        <span asp-validation-for="FullName" class="text-danger small"></span>
                    </div>

                    <!-- Mật khẩu -->
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Mật khẩu</label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Ít nhất 6 ký tự" required />
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                    <!-- Xác nhận mật khẩu -->
                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" class="form-label">Xác nhận mật khẩu</label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Nhập lại mật khẩu" required />
                        <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                    </div>

                    <!-- Nút đăng ký -->
                    <button type="submit" class="btn btn-primary w-100 py-2">
                        <i class="fas fa-check"></i> Đăng ký
                    </button>
                </form>

                <!-- Link đăng nhập -->
                <div class="text-center mt-3">
                    <p class="text-muted">
                        Đã có tài khoản? 
                        <a asp-controller="Auth" asp-action="Login">Đăng nhập tại đây</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
