@model ToDoItem

@{
    ViewData["Title"] = "Xác nhận xóa";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card border-danger shadow-sm">
            <div class="card-body p-4">
                <!-- Tiêu đề -->
                <h2 class="card-title mb-4 text-danger">
                    <i class="fas fa-trash"></i> Xác nhận xóa
                </h2>

                <!-- Thông tin công việc -->
                <div class="alert alert-warning" role="alert">
                    <i class="fas fa-exclamation-triangle"></i>
                    <strong>Cảnh báo:</strong> Bạn sắp xóa công việc này. Hành động này không thể hoàn tác!
                </div>

                <div class="bg-light p-3 rounded mb-4">
                    <h5 class="mb-2">@Model.Title</h5>
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <p class="text-muted mb-1">@Model.Description</p>
                    }
                    <small class="text-muted">
                        <i class="fas fa-clock"></i> 
                        Tạo: @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                    </small>
                </div>

                <!-- Nút hành động -->
                <form asp-action="Delete" asp-route-id="@Model.Id" method="post" style="display:inline;">
                    @Html.AntiForgeryToken()

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-check"></i> Xóa
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Hủy
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
